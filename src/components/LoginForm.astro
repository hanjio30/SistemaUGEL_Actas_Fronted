---
// src/components/LoginForm.astro
const PUBLIC_API_URL = import.meta.env.PUBLIC_API_URL;
---

<div class="login-container">
    <div class="login-card">
        <!-- Header con ondas decorativas -->
        <div class="card-header">
            <div class="wave wave-1"></div>
            <div class="wave wave-2"></div>
            <div class="wave wave-3"></div>
        </div>

        <!-- Contenido principal -->
        <div class="card-body">
            <div class="logo-section">
                <div class="logo-wrapper">
                    <img src="/logo.png" alt="UGEL Santa" class="logo-image" />
                </div>
            </div>

            <div class="text-section">
                <h1 class="title">ÁREA DE ACTAS Y CERTIFICACIONES</h1>
                <p class="subtitle">Ingrese sus credenciales para acceder al sistema</p>
            </div>

            <div id="error-message" class="error-message" style="display: none;"></div>

            <form id="loginForm" class="login-form">
                <div class="input-group">
                    <div class="input-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </div>
                    <input 
                        type="text" 
                        id="usuario" 
                        name="usuario" 
                        placeholder="Usuario"
                        required
                        autocomplete="username"
                    />
                </div>

                <div class="input-group">
                    <div class="input-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <input 
                        type="password" 
                        id="contrasena" 
                        name="contrasena" 
                        placeholder="Contraseña"
                        required
                        autocomplete="current-password"
                    />
                    <button type="button" class="toggle-password" id="togglePassword">
                        <svg class="eye-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </button>
                </div>

                <button type="submit" class="submit-button" id="loginButton">
                    <span id="buttonText">Ingresar al Sistema</span>
                    <div class="button-loader" id="spinner" style="display: none;">
                        <div class="loader-dot"></div>
                        <div class="loader-dot"></div>
                        <div class="loader-dot"></div>
                    </div>
                    <div class="button-shine"></div>
                </button>
            </form>

            <!-- Botón de consulta pública -->
            <div class="divider">
                <span>o</span>
            </div>

            <a href="/consulta-publica" class="public-query-button">
                <svg class="icon-search" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <span>Consulta el estado de tu expediente aquí</span>
                <svg class="icon-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </a>

            <div class="footer-section">
                <p class="footer-text">© 2025 UGEL Santa - Todos los derechos reservados</p>
            </div>
        </div>
    </div>

    <!-- Elementos decorativos flotantes -->
    <div class="floating-elements">
        <div class="float-circle circle-1"></div>
        <div class="float-circle circle-2"></div>
        <div class="float-circle circle-3"></div>
    </div>
</div>

<style>
    .login-container {
        width: 100%;
        max-width: 480px;
        position: relative;
        z-index: 1;
        animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .login-card {
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(20px);
        border-radius: 28px;
        overflow: hidden;
        box-shadow: 
            0 20px 60px rgba(8, 63, 143, 0.3),
            0 0 0 1px rgba(255, 255, 255, 0.1) inset;
    }

    /* Header con ondas */
    .card-header {
        position: relative;
        height: 120px;
        background: linear-gradient(135deg, #083f8f 0%, #0a4faf 50%, #0ea5d7 100%);
        overflow: hidden;
    }

    .wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 200%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .wave-1 {
        animation: wave 8s linear infinite;
    }

    .wave-2 {
        animation: wave 12s linear infinite;
        animation-delay: -2s;
        opacity: 0.5;
    }

    .wave-3 {
        animation: wave 15s linear infinite;
        animation-delay: -4s;
        opacity: 0.3;
    }

    @keyframes wave {
        0% {
            transform: translateX(0) translateY(0);
        }
        50% {
            transform: translateX(-25%) translateY(-10px);
        }
        100% {
            transform: translateX(-50%) translateY(0);
        }
    }

    /* Cuerpo de la tarjeta */
    .card-body {
        padding: 42px 40px 38px;
    }

    /* Logo */
    .logo-section {
        display: flex;
        justify-content: center;
        margin-bottom: 28px;
        margin-top: -90px;
    }

    .logo-wrapper {
        width: 180px;
        height: 180px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 
            0 15px 40px rgba(8, 63, 143, 0.25),
            0 0 0 8px rgba(255, 255, 255, 0.9),
            0 0 0 12px rgba(14, 165, 215, 0.1);
        animation: logoFloat 3s ease-in-out infinite;
        padding: 20px;
    }

    @keyframes logoFloat {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-8px);
        }
    }

    .logo-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    /* Texto */
    .text-section {
        text-align: center;
        margin-bottom: 32px;
    }

    .title {
        font-size: 24px;
        font-weight: 700;
        background: linear-gradient(135deg, #083f8f 0%, #0ea5d7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 8px;
        line-height: 1.3;
    }

    .subtitle {
        font-size: 14px;
        color: #6b7280;
        font-weight: 400;
    }

    /* Mensaje de error */
    .error-message {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
        padding: 14px 18px;
        border-radius: 14px;
        margin-bottom: 24px;
        font-size: 14px;
        border-left: 4px solid #dc2626;
        animation: shake 0.5s cubic-bezier(0.36, 0.07, 0.19, 0.97);
        box-shadow: 0 4px 12px rgba(220, 38, 38, 0.15);
    }

    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        10%, 30%, 50%, 70%, 90% { transform: translateX(-8px); }
        20%, 40%, 60%, 80% { transform: translateX(8px); }
    }

    /* Formulario */
    .login-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 24px;
    }

    /* Input Group */
    .input-group {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        width: 22px;
        height: 22px;
        color: #9ca3af;
        pointer-events: none;
        z-index: 1;
        transition: color 0.3s;
    }

    .input-group input {
        width: 100%;
        padding: 16px 20px 16px 52px;
        border: 2px solid #e5e7eb;
        border-radius: 14px;
        font-size: 15px;
        font-weight: 500;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: #f9fafb;
        color: #1f2937;
    }

    .input-group input::placeholder {
        color: #9ca3af;
        font-weight: 400;
    }

    .input-group input:focus {
        outline: none;
        border-color: #0ea5d7;
        background: white;
        box-shadow: 
            0 0 0 4px rgba(14, 165, 215, 0.1),
            0 4px 12px rgba(14, 165, 215, 0.15);
        transform: translateY(-1px);
    }

    .input-group input:focus + .input-icon,
    .input-group:focus-within .input-icon {
        color: #0ea5d7;
    }

    /* Toggle Password */
    .toggle-password {
        position: absolute;
        right: 14px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        cursor: pointer;
        padding: 8px;
        color: #9ca3af;
        transition: all 0.3s;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .toggle-password:hover {
        color: #0ea5d7;
        background: rgba(14, 165, 215, 0.1);
    }

    .eye-icon {
        width: 20px;
        height: 20px;
    }

    /* Submit Button */
    .submit-button {
        width: 100%;
        padding: 16px 28px;
        background: linear-gradient(135deg, #083f8f 0%, #0a4faf 50%, #0ea5d7 100%);
        color: white;
        border: none;
        border-radius: 14px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 
            0 8px 24px rgba(8, 63, 143, 0.35),
            0 0 0 0 rgba(14, 165, 215, 0);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        position: relative;
        overflow: hidden;
        margin-top: 8px;
    }

    .button-shine {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
            45deg,
            transparent 30%,
            rgba(255, 255, 255, 0.15) 50%,
            transparent 70%
        );
        transform: rotate(45deg);
        transition: all 0.5s;
    }

    .submit-button:hover {
        transform: translateY(-2px);
        box-shadow: 
            0 12px 32px rgba(8, 63, 143, 0.4),
            0 0 0 4px rgba(14, 165, 215, 0.1);
    }

    .submit-button:hover .button-shine {
        left: 150%;
    }

    .submit-button:active {
        transform: translateY(0);
    }

    .submit-button:disabled {
        opacity: 0.8;
        cursor: not-allowed;
        transform: none;
    }

    /* Button Loader */
    .button-loader {
        display: flex;
        gap: 6px;
        align-items: center;
    }

    .loader-dot {
        width: 8px;
        height: 8px;
        background: white;
        border-radius: 50%;
        animation: loaderBounce 1.4s infinite ease-in-out both;
    }

    .loader-dot:nth-child(1) {
        animation-delay: -0.32s;
    }

    .loader-dot:nth-child(2) {
        animation-delay: -0.16s;
    }

    @keyframes loaderBounce {
        0%, 80%, 100% {
            transform: scale(0.8);
            opacity: 0.5;
        }
        40% {
            transform: scale(1.2);
            opacity: 1;
        }
    }

    /* Divider */
    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 24px 0;
        color: #9ca3af;
        font-size: 13px;
        font-weight: 500;
    }

    .divider::before,
    .divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #e5e7eb;
    }

    .divider span {
        padding: 0 16px;
        background: white;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #e5e7eb;
    }

    /* Public Query Button */
    .public-query-button {
        width: 100%;
        padding: 14px 20px;
        background: white;
        border: 2px solid #e5e7eb;
        border-radius: 14px;
        font-size: 14px;
        font-weight: 600;
        color: #083f8f;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
        margin-bottom: 24px;
    }

    .public-query-button:hover {
        border-color: #0ea5d7;
        background: rgba(14, 165, 215, 0.05);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(14, 165, 215, 0.15);
    }

    .icon-search,
    .icon-arrow {
        width: 20px;
        height: 20px;
        color: #0ea5d7;
        transition: transform 0.3s;
    }

    .public-query-button:hover .icon-arrow {
        transform: translateX(4px);
    }

    /* Footer */
    .footer-section {
        text-align: center;
        padding-top: 20px;
        border-top: 1px solid #e5e7eb;
    }

    .footer-text {
        font-size: 12px;
        color: #9ca3af;
        font-weight: 400;
    }

    /* Elementos flotantes */
    .floating-elements {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .float-circle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(2px);
    }

    .circle-1 {
        width: 300px;
        height: 300px;
        top: 10%;
        right: 5%;
        animation: floatAround 25s ease-in-out infinite;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
        bottom: 15%;
        left: 8%;
        animation: floatAround 20s ease-in-out infinite reverse;
    }

    .circle-3 {
        width: 150px;
        height: 150px;
        top: 60%;
        right: 10%;
        animation: floatAround 18s ease-in-out infinite;
        animation-delay: -5s;
    }

    @keyframes floatAround {
        0%, 100% {
            transform: translate(0, 0) scale(1);
            opacity: 0.3;
        }
        33% {
            transform: translate(30px, -30px) scale(1.1);
            opacity: 0.5;
        }
        66% {
            transform: translate(-20px, 20px) scale(0.9);
            opacity: 0.4;
        }
    }

    /* Responsive */
    @media (max-width: 480px) {
        .card-body {
            padding: 36px 28px 32px;
        }

        .logo-wrapper {
            width: 160px;
            height: 160px;
            margin-top: -80px;
        }

        .title {
            font-size: 22px;
        }

        .subtitle {
            font-size: 13px;
        }

        .input-group input {
            padding: 14px 18px 14px 48px;
            font-size: 14px;
        }

        .submit-button {
            padding: 14px 24px;
            font-size: 15px;
        }

        .public-query-button {
            font-size: 13px;
            padding: 12px 16px;
        }

        .icon-search,
        .icon-arrow {
            width: 18px;
            height: 18px;
        }
    }
</style>

<script define:vars={{ PUBLIC_API_URL }}>
    const form = document.getElementById('loginForm');
    const errorMessage = document.getElementById('error-message');
    const loginButton = document.getElementById('loginButton');
    const buttonText = document.getElementById('buttonText');
    const spinner = document.getElementById('spinner');
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('contrasena');

    // Toggle password visibility
    togglePassword?.addEventListener('click', () => {
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        
        const eyeIcon = togglePassword.querySelector('.eye-icon');
        if (type === 'text') {
            eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />';
        } else {
            eyeIcon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />';
        }
    });

    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        errorMessage.style.display = 'none';
        loginButton.disabled = true;
        buttonText.style.display = 'none';
        spinner.style.display = 'flex';

        const formData = new FormData(form);
        const data = {
            usuario: formData.get('usuario'),
            contrasena: formData.get('contrasena')
        };

        try {
            // CORRECCIÓN: Agregar /api al endpoint
            const response = await fetch(`${PUBLIC_API_URL}/login`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json', // Importante para que Laravel devuelva JSON
                },
                body: JSON.stringify(data)
            });

            // Verificar si la respuesta es JSON válido
            const contentType = response.headers.get('content-type');
            if (!contentType || !contentType.includes('application/json')) {
                throw new Error('La respuesta del servidor no es válida. Verifique la configuración del backend.');
            }

            const result = await response.json();

            if (response.ok && result.success) {
                sessionStorage.setItem('usuario', JSON.stringify(result.data));
                
                // Animación de éxito
                loginButton.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';
                buttonText.textContent = '✓ Acceso concedido';
                buttonText.style.display = 'block';
                spinner.style.display = 'none';
                
                setTimeout(() => {
                    window.location.href = '/dashboard';
                }, 1000);
            } else {
                throw new Error(result.message || 'Credenciales incorrectas');
            }
        } catch (error) {
            console.error('Error completo:', error);
            
            let errorMsg = '⚠ Error de conexión. Verifique su conexión e intente nuevamente.';
            
            if (error.message) {
                errorMsg = '⚠ ' + error.message;
            }
            
            errorMessage.textContent = errorMsg;
            errorMessage.style.display = 'block';
            errorMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            loginButton.disabled = false;
            buttonText.style.display = 'block';
            spinner.style.display = 'none';
        }
    });
</script>