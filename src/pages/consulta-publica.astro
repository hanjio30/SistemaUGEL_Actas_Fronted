---
// src/pages/consulta-publica.astro
const PUBLIC_API_URL = import.meta.env.PUBLIC_API_URL;
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consulta Pública - UGEL Santa</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
    <div class="consulta-container">
        <div class="consulta-card">
            <!-- Header -->
            <div class="card-header">
                <div class="wave wave-1"></div>
                <div class="wave wave-2"></div>
                <div class="wave wave-3"></div>
            </div>

            <!-- Content -->
            <div class="card-body">
                <div class="logo-section">
                    <div class="logo-wrapper">
                        <img src="/logo.png" alt="UGEL Santa" class="logo-image" />
                    </div>
                </div>

                <div class="text-section">
                    <h1 class="title">CONSULTA PÚBLICA</h1>
                    <p class="subtitle">Ingrese el número de su expediente para conocer su estado</p>
                </div>

                <div id="error-message" class="error-message" style="display: none;"></div>

                <form id="consultaForm" class="consulta-form">
                    <div class="input-group">
                        <div class="input-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <input 
                            type="text" 
                            id="numeroExpediente" 
                            name="numeroExpediente" 
                            placeholder="Ej: UGEL-2026-0001-A1B2"
                            required
                        />
                    </div>

                    <button type="submit" class="submit-button" id="consultaButton">
                        <span id="buttonText">Consultar Estado</span>
                        <div class="button-loader" id="spinner" style="display: none;">
                            <div class="loader-dot"></div>
                            <div class="loader-dot"></div>
                            <div class="loader-dot"></div>
                        </div>
                        <div class="button-shine"></div>
                    </button>
                </form>

                <!-- Divider -->
                <div class="divider">
                    <span>o</span>
                </div>

                <!-- Botón volver -->
                <a href="/" class="back-button">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    <span>Volver al inicio de sesión</span>
                </a>

                <div class="footer-section">
                    <p class="footer-text">© 2025 UGEL Santa - Todos los derechos reservados</p>
                </div>
            </div>
        </div>

        <!-- Elementos decorativos -->
        <div class="floating-elements">
            <div class="float-circle circle-1"></div>
            <div class="float-circle circle-2"></div>
            <div class="float-circle circle-3"></div>
        </div>
    </div>

    <!-- Contenedor para el modal de Preact -->
    <div id="modal-root"></div>
</body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #083f8f 0%, #0a4faf 35%, #0ea5d7 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        position: relative;
        overflow: hidden;
    }

    body::before {
        content: '';
        position: absolute;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.08) 0%, transparent 70%);
        border-radius: 50%;
        top: -300px;
        right: -200px;
        animation: float 20s ease-in-out infinite;
    }

    body::after {
        content: '';
        position: absolute;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
        border-radius: 50%;
        bottom: -200px;
        left: -150px;
        animation: float 15s ease-in-out infinite reverse;
    }

    @keyframes float {
        0%, 100% {
            transform: translate(0, 0) scale(1);
        }
        50% {
            transform: translate(30px, -30px) scale(1.1);
        }
    }

    .consulta-container {
        width: 100%;
        max-width: 600px;
        position: relative;
        z-index: 1;
        animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .consulta-card {
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(20px);
        border-radius: 28px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(8, 63, 143, 0.3);
    }

    .card-header {
        position: relative;
        height: 120px;
        background: linear-gradient(135deg, #083f8f 0%, #0a4faf 50%, #0ea5d7 100%);
        overflow: hidden;
    }

    .wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 200%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
    }

    .wave-1 {
        animation: wave 8s linear infinite;
    }

    .wave-2 {
        animation: wave 12s linear infinite;
        animation-delay: -2s;
        opacity: 0.5;
    }

    .wave-3 {
        animation: wave 15s linear infinite;
        animation-delay: -4s;
        opacity: 0.3;
    }

    @keyframes wave {
        0% {
            transform: translateX(0) translateY(0);
        }
        50% {
            transform: translateX(-25%) translateY(-10px);
        }
        100% {
            transform: translateX(-50%) translateY(0);
        }
    }

    .card-body {
        padding: 42px 40px 38px;
    }

    .logo-section {
        display: flex;
        justify-content: center;
        margin-bottom: 28px;
        margin-top: -90px;
    }

    .logo-wrapper {
        width: 180px;
        height: 180px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 
            0 15px 40px rgba(8, 63, 143, 0.25),
            0 0 0 8px rgba(255, 255, 255, 0.9),
            0 0 0 12px rgba(14, 165, 215, 0.1);
        animation: logoFloat 3s ease-in-out infinite;
        padding: 20px;
    }

    @keyframes logoFloat {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-8px);
        }
    }

    .logo-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .text-section {
        text-align: center;
        margin-bottom: 32px;
    }

    .title {
        font-size: 28px;
        font-weight: 700;
        background: linear-gradient(135deg, #083f8f 0%, #0ea5d7 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 8px;
    }

    .subtitle {
        font-size: 14px;
        color: #6b7280;
        font-weight: 400;
    }

    .error-message {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
        padding: 14px 18px;
        border-radius: 14px;
        margin-bottom: 24px;
        font-size: 14px;
        border-left: 4px solid #dc2626;
        animation: shake 0.5s cubic-bezier(0.36, 0.07, 0.19, 0.97);
    }

    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        10%, 30%, 50%, 70%, 90% { transform: translateX(-8px); }
        20%, 40%, 60%, 80% { transform: translateX(8px); }
    }

    .consulta-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-bottom: 24px;
    }

    .input-group {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 18px;
        top: 50%;
        transform: translateY(-50%);
        width: 22px;
        height: 22px;
        color: #9ca3af;
        pointer-events: none;
        z-index: 1;
        transition: color 0.3s;
    }

    .input-group input {
        width: 100%;
        padding: 16px 20px 16px 52px;
        border: 2px solid #e5e7eb;
        border-radius: 14px;
        font-size: 15px;
        font-weight: 500;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: #f9fafb;
        color: #1f2937;
    }

    .input-group input::placeholder {
        color: #9ca3af;
        font-weight: 400;
    }

    .input-group input:focus {
        outline: none;
        border-color: #0ea5d7;
        background: white;
        box-shadow: 0 0 0 4px rgba(14, 165, 215, 0.1);
        transform: translateY(-1px);
    }

    .input-group input:focus + .input-icon,
    .input-group:focus-within .input-icon {
        color: #0ea5d7;
    }

    .submit-button {
        width: 100%;
        padding: 16px 28px;
        background: linear-gradient(135deg, #083f8f 0%, #0a4faf 50%, #0ea5d7 100%);
        color: white;
        border: none;
        border-radius: 14px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 8px 24px rgba(8, 63, 143, 0.35);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        position: relative;
        overflow: hidden;
        margin-top: 8px;
    }

    .button-shine {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.15) 50%, transparent 70%);
        transform: rotate(45deg);
        transition: all 0.5s;
    }

    .submit-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(8, 63, 143, 0.4);
    }

    .submit-button:hover .button-shine {
        left: 150%;
    }

    .submit-button:disabled {
        opacity: 0.8;
        cursor: not-allowed;
    }

    .button-loader {
        display: flex;
        gap: 6px;
        align-items: center;
    }

    .loader-dot {
        width: 8px;
        height: 8px;
        background: white;
        border-radius: 50%;
        animation: loaderBounce 1.4s infinite ease-in-out both;
    }

    .loader-dot:nth-child(1) { animation-delay: -0.32s; }
    .loader-dot:nth-child(2) { animation-delay: -0.16s; }

    @keyframes loaderBounce {
        0%, 80%, 100% {
            transform: scale(0.8);
            opacity: 0.5;
        }
        40% {
            transform: scale(1.2);
            opacity: 1;
        }
    }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 24px 0;
        color: #9ca3af;
        font-size: 13px;
        font-weight: 500;
    }

    .divider::before,
    .divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #e5e7eb;
    }

    .divider span {
        padding: 0 16px;
        background: white;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #e5e7eb;
    }

    .back-button {
        width: 100%;
        padding: 14px 20px;
        background: white;
        border: 2px solid #e5e7eb;
        border-radius: 14px;
        font-size: 14px;
        font-weight: 600;
        color: #083f8f;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        text-decoration: none;
        margin-bottom: 24px;
    }

    .back-button:hover {
        border-color: #0ea5d7;
        background: rgba(14, 165, 215, 0.05);
        transform: translateY(-2px);
    }

    .back-button svg {
        width: 20px;
        height: 20px;
        transition: transform 0.3s;
    }

    .back-button:hover svg {
        transform: translateX(-4px);
    }

    .footer-section {
        text-align: center;
        padding-top: 20px;
        border-top: 1px solid #e5e7eb;
    }

    .footer-text {
        font-size: 12px;
        color: #9ca3af;
    }

    .floating-elements {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .float-circle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(2px);
    }

    .circle-1 {
        width: 300px;
        height: 300px;
        top: 10%;
        right: 5%;
        animation: floatAround 25s ease-in-out infinite;
    }

    .circle-2 {
        width: 200px;
        height: 200px;
        bottom: 15%;
        left: 8%;
        animation: floatAround 20s ease-in-out infinite reverse;
    }

    .circle-3 {
        width: 150px;
        height: 150px;
        top: 60%;
        right: 10%;
        animation: floatAround 18s ease-in-out infinite;
        animation-delay: -5s;
    }

    @keyframes floatAround {
        0%, 100% {
            transform: translate(0, 0) scale(1);
            opacity: 0.3;
        }
        33% {
            transform: translate(30px, -30px) scale(1.1);
            opacity: 0.5;
        }
        66% {
            transform: translate(-20px, 20px) scale(0.9);
            opacity: 0.4;
        }
    }

    @media (max-width: 480px) {
        .card-body {
            padding: 36px 28px 32px;
        }

        .logo-wrapper {
            width: 160px;
            height: 160px;
        }

        .title {
            font-size: 24px;
        }
    }
</style>

<script>
    import { h, render } from 'preact';
    import ConsultaModal from '../components/ConsultaModal.jsx';

    const PUBLIC_API_URL = import.meta.env.PUBLIC_API_URL;
    
    const form = document.getElementById('consultaForm');
    const errorMessage = document.getElementById('error-message');
    const consultaButton = document.getElementById('consultaButton');
    const buttonText = document.getElementById('buttonText');
    const spinner = document.getElementById('spinner');
    const modalRoot = document.getElementById('modal-root');

    let currentExpediente = null;
    let isModalOpen = false;

    // Función para renderizar el modal
    function renderModal(expediente, isOpen) {
        render(
            h(ConsultaModal, {
                isOpen: isOpen,
                onClose: closeModal,
                expediente: expediente
            }),
            modalRoot
        );
    }

    // Función para abrir el modal
    function openModal(expediente) {
        currentExpediente = expediente;
        isModalOpen = true;
        renderModal(expediente, true);
        document.body.style.overflow = 'hidden';
    }

    // Función para cerrar el modal
    function closeModal() {
        isModalOpen = false;
        renderModal(currentExpediente, false);
        document.body.style.overflow = '';
        
        // Limpiar después de la animación
        setTimeout(() => {
            currentExpediente = null;
        }, 300);
    }

    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        errorMessage.style.display = 'none';
        consultaButton.disabled = true;
        buttonText.style.display = 'none';
        spinner.style.display = 'flex';

        const numeroExpediente = document.getElementById('numeroExpediente').value.trim();

        try {
            // Nueva ruta usando ConsultaController
            const response = await fetch(`${PUBLIC_API_URL}/consulta/expediente/${encodeURIComponent(numeroExpediente)}`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                }
            });

            const result = await response.json();

            if (response.ok && result.success && result.data) {
                // Abrir modal con los datos del expediente
                openModal(result.data);
            } else {
                throw new Error(result.message || 'Expediente no encontrado');
            }
        } catch (error) {
            console.error('Error en consulta:', error);
            errorMessage.textContent = '⚠ ' + (error.message || 'No se encontró el expediente. Verifique el código de seguimiento e intente nuevamente.');
            errorMessage.style.display = 'block';
        } finally {
            consultaButton.disabled = false;
            buttonText.style.display = 'block';
            spinner.style.display = 'none';
        }
    });

    // Manejar tecla ESC para cerrar modal
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && isModalOpen) {
            closeModal();
        }
    });
</script>