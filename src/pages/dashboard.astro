<style is:global>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Poppins', sans-serif;
        background: #f3f4f6;
        overflow-x: hidden;
    }

    .dashboard-container {
        display: flex;
        min-height: 100vh;
    }

    /* Sidebar */
    .sidebar {
        width: 280px;
        background: linear-gradient(135deg, #083f8f 0%, #0a4faf 100%);
        color: white;
        display: flex;
        flex-direction: column;
        box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
        position: fixed;
        height: 100vh;
        left: 0;
        top: 0;
        z-index: 1000;
        transition: transform 0.3s ease;
    }

    .sidebar.mobile-hidden {
        transform: translateX(-100%);
    }

    .sidebar-header {
        padding: 28px 24px;
        text-align: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .logo-container {
        width: 80px;
        height: 80px;
        background: white;
        border-radius: 50%;
        margin: 0 auto 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }

    .sidebar-logo {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .sidebar-title {
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 4px;
    }

    .sidebar-subtitle {
        font-size: 12px;
        opacity: 0.85;
        font-weight: 400;
    }

    /* Scrollbar moderno y elegante para la navegaci√≥n del sidebar */

/* Para navegadores WebKit (Chrome, Safari, Edge) */
.sidebar-nav::-webkit-scrollbar {
    width: 8px;
}

.sidebar-nav::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    margin: 8px 0;
}

.sidebar-nav::-webkit-scrollbar-thumb {
    background: linear-gradient(180deg, rgba(14, 165, 215, 0.6) 0%, rgba(12, 139, 184, 0.6) 100%);
    border-radius: 10px;
    border: 2px solid transparent;
    background-clip: padding-box;
    transition: all 0.3s ease;
}

.sidebar-nav::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(180deg, rgba(14, 165, 215, 0.9) 0%, rgba(12, 139, 184, 0.9) 100%);
    background-clip: padding-box;
    border: 2px solid transparent;
}

.sidebar-nav::-webkit-scrollbar-thumb:active {
    background: linear-gradient(180deg, #0ea5d7 0%, #0c8bb8 100%);
    background-clip: padding-box;
}

/* Para Firefox */
.sidebar-nav {
    scrollbar-width: thin;
    scrollbar-color: rgba(14, 165, 215, 0.6) rgba(255, 255, 255, 0.05);
}

/* Animaci√≥n suave al hacer scroll */
.sidebar-nav {
    scroll-behavior: smooth;
}

/* Indicador visual de m√°s contenido (opcional) */
.sidebar-nav::after {
    content: '';
    position: sticky;
    bottom: 0;
    left: 0;
    right: 0;
    height: 20px;
    background: linear-gradient(to top, rgba(8, 63, 143, 0.3), transparent);
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s;
}

.sidebar-nav.has-scroll::after {
    opacity: 1;
}

    /* User Info */
    .user-info {
        padding: 20px 24px;
        display: flex;
        align-items: center;
        gap: 14px;
        background: rgba(255, 255, 255, 0.08);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .user-avatar {
        width: 48px;
        height: 48px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .user-avatar svg {
        width: 24px;
        height: 24px;
    }

    .user-details {
        flex: 1;
        min-width: 0;
    }

    .user-name {
        font-size: 15px;
        font-weight: 600;
        margin-bottom: 2px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .user-role {
        font-size: 12px;
        opacity: 0.85;
        background: rgba(255, 255, 255, 0.15);
        padding: 2px 10px;
        border-radius: 12px;
        display: inline-block;
    }

    /* Sidebar Navigation */
    .sidebar-nav {
        flex: 1;
        overflow-y: auto;
        padding: 20px 12px;
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 18px 20px;
        margin-bottom: 12px;
        border-radius: 16px;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        color: rgba(255, 255, 255, 0.95);
        font-size: 14.5px;
        font-weight: 500;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.05) 100%);
        border: 2px solid rgba(255, 255, 255, 0.1);
        width: 100%;
        text-align: left;
        position: relative;
        overflow: hidden;
        font-family: 'Poppins', sans-serif;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
    }

    .nav-item::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 5px;
        background: linear-gradient(180deg, #0ea5d7 0%, #0c8bb8 100%);
        transform: scaleY(0);
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        transform-origin: center;
        box-shadow: 0 0 12px rgba(14, 165, 215, 0.6);
    }

    .nav-item:hover {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.16) 0%, rgba(255, 255, 255, 0.12) 100%);
        border-color: rgba(255, 255, 255, 0.25);
        transform: translateX(8px) scale(1.02);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        color: #ffffff;
    }

    .nav-item:hover::before {
        transform: scaleY(1);
        width: 6px;
    }

    .nav-item.active {
        background: linear-gradient(135deg, rgba(14, 165, 215, 0.35) 0%, rgba(12, 139, 184, 0.25) 100%);
        border-color: rgba(14, 165, 215, 0.6);
        font-weight: 600;
        box-shadow: 0 8px 24px rgba(14, 165, 215, 0.4);
        transform: translateX(8px) scale(1.02);
        color: #ffffff;
    }

    .nav-item.active::before {
        transform: scaleY(1);
        width: 6px;
    }

    .nav-emoji {
        font-size: 24px;
        width: 42px;
        height: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.08) 100%);
        border-radius: 12px;
        flex-shrink: 0;
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .nav-item:hover .nav-emoji {
        transform: scale(1.15) rotate(-5deg);
    }

    .nav-item.active .nav-emoji {
        background: linear-gradient(135deg, rgba(14, 165, 215, 0.4) 0%, rgba(12, 139, 184, 0.3) 100%);
        transform: scale(1.1);
    }

    /* Sidebar Footer */
    .sidebar-footer {
        padding: 20px 24px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .logout-button {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 12px 20px;
        background: rgba(220, 38, 38, 0.15);
        border: 1px solid rgba(220, 38, 38, 0.3);
        border-radius: 12px;
        color: #fecaca;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

    .logout-button:hover {
        background: rgba(220, 38, 38, 0.25);
        border-color: rgba(220, 38, 38, 0.5);
        transform: translateY(-2px);
    }

    .logout-button svg {
        width: 18px;
        height: 18px;
    }

    /* Main Content */
    .main-content {
        flex: 1;
        margin-left: 280px;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .content-header {
        background: white;
        padding: 24px 32px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        display: flex;
        align-items: center;
        gap: 24px;
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .menu-toggle {
        display: none;
        flex-direction: column;
        gap: 5px;
        background: none;
        border: none;
        cursor: pointer;
        padding: 8px;
    }

    .menu-toggle span {
        width: 24px;
        height: 3px;
        background: #083f8f;
        border-radius: 2px;
        transition: all 0.3s;
    }

    .header-title {
        flex: 1;
    }

    .header-title h1 {
        font-size: 24px;
        font-weight: 700;
        color: #083f8f;
        margin-bottom: 4px;
    }

    .header-title p {
        font-size: 14px;
        color: #6b7280;
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .current-date {
        font-size: 14px;
        color: #6b7280;
        font-weight: 500;
        padding: 8px 16px;
        background: #f3f4f6;
        border-radius: 8px;
    }

    /* Content Body */
    .content-body {
        flex: 1;
        padding: 32px;
    }

    /* Welcome Screen */
    .welcome-screen {
        text-align: center;
        max-width: 900px;
        margin: 60px auto;
        animation: fadeIn 0.4s ease;
    }

    .welcome-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #083f8f 0%, #0ea5d7 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 28px;
        box-shadow: 0 12px 40px rgba(8, 63, 143, 0.3);
    }

    .welcome-icon svg {
        width: 50px;
        height: 50px;
        stroke: white;
        stroke-width: 2;
    }

    .welcome-screen h2 {
        font-size: 36px;
        font-weight: 700;
        color: #083f8f;
        margin-bottom: 12px;
    }

    .welcome-screen > p {
        font-size: 18px;
        color: #6b7280;
        margin-bottom: 48px;
    }

    .welcome-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 24px;
        margin-top: 40px;
    }

    .info-card {
        background: white;
        padding: 32px 24px;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s;
    }

    .info-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
    }

    .info-icon {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
    }

    .info-icon.blue {
        background: linear-gradient(135deg, #0ea5d7 0%, #083f8f 100%);
    }

    .info-icon.green {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .info-icon.purple {
        background: linear-gradient(135deg, #8b5cf6 0%, #6d28d9 100%);
    }

    .info-icon svg {
        width: 30px;
        height: 30px;
        stroke: white;
        stroke-width: 2;
    }

    .info-card h3 {
        font-size: 18px;
        font-weight: 600;
        color: #083f8f;
        margin-bottom: 12px;
    }

    .info-card p {
        font-size: 14px;
        color: #6b7280;
        line-height: 1.6;
    }

    /* Module Content */
    .module-content {
        display: none;
        animation: fadeIn 0.4s ease;
    }

    .module-content.active {
        display: block;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Sidebar Overlay */
    .sidebar-overlay {
        display: none;
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 999;
    }

    .sidebar-overlay.active {
        display: block;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .sidebar {
            transform: translateX(-100%);
        }

        .sidebar.active {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .menu-toggle {
            display: flex;
        }
    }

    @media (max-width: 768px) {
        .content-header {
            padding: 20px;
        }

        .content-body {
            padding: 20px;
        }

        .header-title h1 {
            font-size: 20px;
        }

        .current-date {
            display: none;
        }

        .welcome-screen {
            margin: 40px auto;
        }

        .welcome-screen h2 {
            font-size: 28px;
        }

        .welcome-cards {
            grid-template-columns: 1fr;
        }
    }
</style>